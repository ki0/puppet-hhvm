; File Managed by Puppet

; php options

pid =  <%= @pid_file %>

; hhvm specific

<% if @socket_file != '' -%>
hhvm.server.socket = <%= @socket_file %>
<% else -%>
hhvm.server.port = <%= @port %>
<% end -%>
hhvm.server.type = fastcgi
hhvm.server.default_document = index.php
hhvm.log.use_log_file = true
hhvm.log.file =  <%= @log_file %>
hhvm.repo.central.path = /var/run/hhvm/hhvm.hhbc

<% if @config_dir_extensions != '' %>
hhvm.dynamic_extension_path = <%= @config_dir_extensions %>
